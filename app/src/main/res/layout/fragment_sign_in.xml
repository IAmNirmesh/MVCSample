<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="view.SignInFragment">

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:onClick="signInEditor"
        android:text="@string/label_sign_in_editor" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:onClick="signInReader"
        android:text="@string/label_sign_in_reader" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:onClick="signInTestEditor"
        android:text="@string/label_sign_in_test_editor" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:onClick="signInTestReader"
        android:text="@string/label_sign_in_test_reader" />

</LinearLayout>